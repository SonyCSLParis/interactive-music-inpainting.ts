{
  "extends": "./node_modules/electron-webpack/tsconfig-base.json",

  "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "lib": ["dom", "es7"],
      "pretty": true,
      "noImplicitAny": false,
      "removeComments": true,
      "declaration": true,
      "sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true
  },
  "allowSyntheticDefaultImports": true,
  "awesomeTypescriptLoaderOptions": {},
  "exclude": [
    "node_modules"
  ]
}
